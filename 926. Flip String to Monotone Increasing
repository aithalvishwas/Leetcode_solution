class Solution {
    public int minFlipsMonoIncr(String s) {
        int flip = 0;
        int one =0;
        int n = s.length();
        for(int i =0;i<n;i++){
            if(s.charAt(i)=='1'){
                one++;
            }else{
                if(one ==0){
                    continue;
                }else{
                    flip++;
                }
            }
            if(one<flip){
                flip=one;
            }
        }
        return flip;
    }
}
